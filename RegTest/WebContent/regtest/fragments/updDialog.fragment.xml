<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
  
   <Dialog
      title="Update Placeholders"
      afterClose="dialogAftercloseUpdPH"
      >

      <beginButton>
           <Button
            text="Save"
            icon="sap-icon://save"
            press= "onSaveUpdPH"/>
      </beginButton>
      <endButton>
          <Button
            text="Cancel"
            icon="sap-icon://cancel"
            press= "onCloseDialogUpdPH"/>
      </endButton>
      
     <!--  <Text text = "Name : "/>-->
<content>
<VBox>
<Label text="Placeholder"/>
<Input  id="upd1" value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
<Label text="Replace with"/>
<Input   id="upd2" value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
</VBox>
</content>

   </Dialog>
</core:FragmentDefinition>