<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
  
   <Dialog
      title="Update Placeholders"
      afterClose="dialogAftercloseUpdPH"
      >

      <beginButton>
           <Button
            text="Save"
            icon="sap-icon://save"
            press= "onSaveUpdPH"/>
      </beginButton>
      <endButton>
          <Button
            text="Cancel"
            icon="sap-icon://cancel"
            press= "onCloseDialogUpdPH"/>
      </endButton>
      
     <!--  <Text text = "Name : "/>-->
<content>
<VBox>
<Label text="Placeholders"/>
<Input   id="updPlaceholder" value="{/REG_PLACE_SET>placeholder}" valueLiveUpdate="true" width="60%"/>
<Label text="Replace with"/>
<Input   id="updReplace" value="{/REG_PLACE_SET>replace_with}" valueLiveUpdate="true" width="60%"/>
</VBox>
</content>

   </Dialog>
</core:FragmentDefinition>