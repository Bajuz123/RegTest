<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Dialog id="addPHDialog" title="{i18n>NewPlaceholder}"
		afterClose="dialogAftercloseAddPH" items="{ path: 'list>/' }">

		<beginButton>
			<Button text="{i18n>Save}" icon="sap-icon://save" press="onSaveAddPH" />
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" icon="sap-icon://cancel" press="onCloseDialogAddPH" />
		</endButton>

		<!-- <Text text = "Name : "/> noDataText="No Products Found" search="handleSearch" 
			confirm="handleClose" close="handleClose" -->
		<content>
			<VBox>
				<Label text="{i18n>Placeholders}" />
				<Input id="inputPlaceholder" valueLiveUpdate="true" width="60%" />
				<Label text="{i18n>ReplaceWith}" />
				<Input id="inputReplace" valueLiveUpdate="true" width="60%" />
			</VBox>
		</content>
	</Dialog>
</core:FragmentDefinition>